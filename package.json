{
  "name": "tiny-cursor",
  "repository": "github:fabiospampinato/tiny-cursor",
  "description": "A tiny library for hiding and showing the cursor in the terminal.",
  "version": "2.0.0",
  "type": "module",
  "main": "dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "tsex clean",
    "compile": "tsex compile",
